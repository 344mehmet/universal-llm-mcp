{
  "name": "universal-llm-mcp",
  "version": "1.2.0",
  "description": "Enterprise AI Development Platform - Next.js, Edge, Drizzle & 21+ LLM",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "server": "node dist/start-server.js",
    "server:dev": "tsx src/start-server.ts",
