    "db:generate": "drizzle-kit generate:sqlite",
    "db:push": "drizzle-kit push:sqlite",
    "edge:dev": "wrangler dev src/edge/worker.ts"
  },
  "keywords": [
    "mcp",
    "llm",
    "rag",
    "nextjs",
    "drizzle",
    "edge"
  ],
  "author": "Universal LLM",
  "license": "MIT",
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@octokit/rest": "^21.0.0",
    "drizzle-orm": "^0.33.0",
    "next": "^15.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251224.0",
    "@types/node": "^20.10.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "drizzle-kit": "^0.24.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "wrangler": "^3.0.0"
  }
}